{
    "manifest_version": 3,
    "name": "Img Extractor",
    "version": "1.0",
    "description": "Extract and download images from selected elements.",
    "permissions": [
        "activeTab",
        "storage",
        "downloads",
        "scripting",
        "declarativeContent"
    ],
    "host_permissions": [
        "http://localhost/*",
        "*://*.instagram.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles/content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}